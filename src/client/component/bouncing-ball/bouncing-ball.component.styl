primary-blue = #008FFF;

.ball-container
  height: 100%;
  width: 100%;
  position: relative;

  .ball
    border-radius: 50%;
    height: 3vw;
    font-size: @height;
    font-weight: 800;
    line-height: @height;
    margin-left: -0.5 * @height;
    width: @height;
    position: absolute;

  .bouncing
    background-color: primary-blue;
    bottom: 150%;
    opacity: 0;
    transform-origin: bottom;
    transition: all cubic-bezier(0.81, 0.16, 0.38, 0.56);

    &.calibrate
      animation: bouncing ease-in infinite;

    &.active
      bottom: 0;
      opacity: 1;

  .counter
    border: solid 6px primary-blue;
    bottom: -4vw;
    color: primary-blue;
    opacity: 0;
    text-align: center;
    transition: all 100ms cubic-bezier(0.81, 0.16, 0.38, 0.56);

    &.active {
      bottom: 0;
      opacity: 1;
    }

@keyframes bouncing
  0%, 100%
    transform: translateY(1vh) scale(0.8, 1.2);
  30%
    transform: translateY(-9vh) scale(0.9, 1.1);
  40%
    transform: translateY(-10vh) scale(1.1, 0.9);
  80%
    transform: translateY(0.5vh) scale(0.9, 1.1);
  90%
    transform: translateY(1vh) scale(1.2, 0.6);
