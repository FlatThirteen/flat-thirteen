.ball-container
  .bouncing.ball([ngClass]="{active: showBall$ | async, calibrate: !transport.paused}",
    [style.left]="left",
    [style.animation-duration]="animationDuration",
    [style.animation-delay]="animationDelay",
    [style.transition-duration]="transitionDuration",
    [style.transition-delay]="transitionDelay")
  .counter.ball(*ngFor="let left of lefts; let i = index;",
      [class.active]="counter === i + 1",
      [style.left]="left") {{ i + 1 }}
