fx-blue = #00AFFF;
active-blue = #009FFF;
main-blue = #008FFF;
back-blue = #007FFF;
active-grey = #999;
main-grey = #888;
back-grey = #777;
button-shadow-size = 4px;
faces-height = 5vh;

.grid
  margin: auto;
  position: relative;
  user-select: none;
  width: 80vw;
  max-width: 80vh;

.blur
  filter: blur(3px);

.overlay
  position: absolute;
  bottom: faces-height;
  left: 0;
  right: 0;
  top: 0;
  margin-bottom: 15px;

.counter-container
  display: flex;
  align-items: center;
  justify-content: center;

.counter
  background-color: #FFF;
  border-radius: 50%;
  font-size: 30vh;
  font-weight: 400;
  height: 30vh;
  line-height: 30vh;
  padding: 2vh;
  position: absolute;
  text-align: center;
  width: 30vh;

  &.active
    animation: active;
    animation-duration: 250ms;

.position
  background-color: rgba(255,255,255,0.5);
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 1.5vw;

.strip, .faces
  display: flex;
  margin: 0;
  width: 100%;

.strip
  .strip-container &, /.faces
    background-color: back-blue;

    .goal &, .count &, /.goal .faces, /.count .faces
      background-color: back-grey;

.beat, .face
  transition: background-color 150ms ease-in-out;

.goal, .count
  .strip-container .beat, .face
    background-color: main-grey;

.strip-container .beat:not(:last-child):after
  background-color: #FFF;
  content: '';
  height: 8vh;
  max-height: 8vw;
  left: 100%;
  margin: 4px;
  position: absolute;
  width: 2px;

.faces
  display: flex;
  margin-top: 5px;
  position: relative;

particle-fx
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: - faces-height 0;

.face
  flex: 1 1 0;
  height: faces-height;
  margin: 5px;
  background-color: main-blue;

.eyes
  position: relative;
  top: 25%;
  left: 0;
  margin: auto;
  height: 1vh;
  width: 4vw;
  min-width: 30px;
  max-width: 40px;
  padding: 1vh eyes-padding = 0.5vw;
  transition: all 150ms ease-in-out;

  .selected:not(.goal) .faces:not(:hover) &
    &.left, &.right
      padding-top: 0;

    &.left
      left: -1vw;

    &.right
      left: 1vw;


  .selected:not(.goal) .faces:not(:hover) .cursor &
    top: -10%;

  &:before, &:after
    background-color: eye-color = #000;
    content: '';
    border: solid 1px eye-color;
    border-radius: 50%;
    bottom: 1vh;
    position: absolute;
    height: 15px;
    width: 10px;

    .victory &
      animation: bounce 500ms ease infinite;
      background-color: transparent;
      border-radius: 50% 50% 0 0;
      border-width: 3px 0 0 0;

    .active &
      animation: blink;
      animation-duration: 250ms;

  &:before
    left: eyes-padding;

  &:after
    right: eyes-padding;


  &:hover, .goal &, .count &
    &:before, &:after
      border: 0;
      height: 2px;

.eyes:hover:active
  animation: shake 750ms ease infinite;

@keyframes blink
  0%, 100%
    transform: translateY(0) scaleY(1);

  20%
    transform: translateY(1vh) scaleY(.3)

  40%
    transform: translateY(1.5vh) scaleY(.1);

  80%
    transform: translateY(1vh) scaleY(.5)

@keyframes bounce
  0%, 95%
    transform: translateY(0)

  25%
    transform: translateY(.7vh)

  50%
    transform: translateY(-.8vh)

  65%
    transform: translateY(.5vh)

  80%
    transform: translateY(-.3vh)

@keyframes shake
  0%, 100%
    transform: translate3d(0, 0, 0)

  25%
    transform: translate3D(.7vw, -.1vh, 0)

  50%
    transform: translate3D(-.8vw, -.2vh, 0)

  65%
    transform: translate3D(.5vw, -.2vh, 0)

  80%
    transform: translate3D(-.3vw, -.1vh, 0)

.beat
  align-items: center;
  display: inline-flex;
  flex: 1 1 0;
  height: 20vh;
  max-height: 20vw;
  margin: 5px;
  position: relative;
  text-align: center;

  .strip-container &
    background-color: main-blue;

.active
  .strip-container .beat &, &.face
    background-color: active-blue;

  .strip-container .beat &, &.face
    .goal &, .count &
      background-color: active-grey;

.pulse
  .strip-container &:not(:last-child)
    border-right: dotted 3px back-blue;

    .goal &, .count &
      border-right-color: back-grey;

  display: inline-flex;
  flex: 1;
  height: 100%;
  position: relative;

note-size(percent, line-adjust = 0)
  line-height: (percent - line-adjust)vh;
  height: (percent)vh;
  width: (percent)vw;
  max-height: (percent)vw;
  max-width: (percent)vh;

.quarter
  font-size: 10vh;
  note-size(16, 1);

.eighth
  font-size: 6vh;
  note-size(9, 1);

.triplet
  font-size: 4vh;
  note-size(6);

.sixteenth
  font-size: 2vh;
  note-size(4);

.note
  background-color: #000;
  border-radius: 50%;
  margin: auto;

  .goal &.actual
    opacity: 0.3;

  &.fx
    background-color: transparent;

.controls
  align-items: center;
  display: inline-flex;
  height: 100%;
  left: 0;
  opacity: 0;
  position: absolute;
  top: 0;
  width: 100%;

  .note
    background-color: rgba(0, 0, 0, 0.1);
    color: rgba(0, 0, 0, 0.5);
    transform: scale(0.9);
    transition: all 150ms ease-in-out;

    :not(.active) &
      transition: none;

.cursor .controls
  .selected &
    opacity: 1;

  .note
    background-color: rgba(0, 0, 0, 0.1);
    cursor: pointer;
    position: relative;

    &:hover
      background-color: rgba(0, 0, 0, 0.3);
      top: - button-shadow-size;
      box-shadow: 0 button-shadow-size 1px 0 rgba(0, 0, 0, 0.1);

    &.on
      background-color: rgba(0, 0, 0, 1);
      color: rgba(255, 255, 255, 0.5);
      transform: scale(1);

      &:hover
        box-shadow: 0 button-shadow-size 1px 0 rgba(255, 255, 255, 0.3);

      &:after
        content: '';
        background-color: rgba(255, 255, 255, 0.5);
        font-size: 10px;
        left: 25%;
        line-height: 10px;
        position: absolute;
        text-align: center;
        width: 50%;

  .quarter.on
    &:after
      bottom: 19%;
      height: 10px;

    &:hover:after
      content: 'space';
      color: #000;

  .eighth.on:after
    bottom: 18%;
    height: 5px;

  .triplet.on:after
    bottom: 13%;
    height: 4px;

  .sixteenth.on:after
    bottom: 13%;
    height: 3px;

alpha-blue-dark = alpha(lightness(active-blue, 20%), 0.5);
alpha-blue-light = alpha(lightness(active-blue, 80%), 0.5);

.fx.note
  &:before, &:after
    border-radius: 50%;
    content: '';
    position: absolute;

.demo, .loop .active, .play .active, .victory .active
  .actual.note
    animation: active;
    animation-duration: 250ms;

  .fx.note
    animation: burst;
    animation-duration: 250ms;
    opacity: 0;
    position: relative;

    &:before
      box-shadow: 0 0 15px 3px alpha-blue-dark;
      left: 7%;
      top: @left;
      bottom: @left;
      right: @left;

    &:after
      box-shadow: 0 0 20px 4px alpha-blue-dark;
      left: 15%;
      top: @left;
      bottom: @left;
      right: @left;


@keyframes active
  0%
    transform: scale(1);

  40%
    transform: scale(1.1);

  70%
    transform: scale(0.9);

  100%
    transform: scale(1);

@keyframes burst
  0%
    box-shadow: 0 0 5px 0 alpha-blue-light, inset 0 0 150px 0px alpha-blue-light;
    transform: scale(1);
    opacity: 1;

  50%
    opacity: .7;

  100%
    box-shadow: 0 0 100px 50px alpha-blue-light, inset 0 0 150px 50px alpha-blue-light;
    transform: scale(2);
    opacity: 0;
