.grid
  border: solid 1px #888;
  margin: 5vw auto 1vw;
  position: relative;
  user-select: none;
  width: 80vw;

.overlay
  align-items: center;
  bottom: 0;
  justify-content: center;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  display: flex;

.counter
  background-color: #FFF;
  border-radius: 50%;
  font-size: 30vw;
  font-weight: 400;
  height: 30vw;
  line-height: 30vw;
  padding: 2vw;
  position: absolute;
  text-align: center;
  width: 30vw;

  &.active
    animation: active;
    animation-duration: 250ms;

.position
  background-color: rgba(255,255,255,0.5);
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 1.5vw;

.controls
  position: absolute;
  top: -4.2vw;
  width: 100%;

  .pulses
    align-items: baseline;
    display: inline-flex;
    flex: 1;
    justify-content: space-between;
    opacity: 0;
    transition: all 150ms ease-in-out;
    transition-delay: 0ms;
    transform: translateY(40px) scale(.1);
    width: 25%;

    .hint
      background-color: #008FFF;
      border-radius: 40% 40% 0 0;
      cursor: pointer;
      font-size: 2vw;
      margin: 0 5px;
      opacity: 0.2;
      padding: 1vw;
      text-align: center;
      transition: opacity 150ms ease-in-out;
      width: 20%;

      &.set, &.set:hover
        opacity: .8;

      &:hover
        opacity: 1;

:not(.goal) .controls .pulses.selected
  opacity: 1;
  transition-delay: 350ms;
  transform: translateY(0) scale(1);

.strip
  background-color: #007FFF;
  display: flex;
  margin: 0;
  width: 100%;

.goal .strip
  background-color: #777;

.beat
  transition: background-color 150ms ease-in-out;

.goal .beat
  background-color: #888;

.beat:not(:last-child):after
  background-color: #FFF;
  content: '';
  height: 8vw;
  left: 100%;
  margin: 4px;
  position: absolute;
  width: 2px;
