primary-blue = #008FFF;
primary-green = #50FFA0;
primary-red = #FF6e56;

bottom-size = 20vh;
button-height = 60px;
button-padding = 10px;
button-shadow-size = 4px;
button-shadow = 0 button-shadow-size 0 #000;
red-button-shadow = 0 button-shadow-size 0 primary-red;
weenie-shadow = 0 button-shadow-size 3px #555;
power-button-radius = 6px;

.fade
  filter: blur(5px);
  opacity: 0.2;

.main
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: bottom-size;
  overflow-y: scroll;

.lesson-container
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: center;
  transform: scale(1) translateY(0)
  transition-duration: 150ms;
  padding: 20px 0;

  &.fade
    transform: scale(.5) translateY(30vh)

  .spacer
    height: 30vw;

  .current
    position: relative;
    text-align: center;

  .stage
    background-color: primary-blue;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 5vw;
    height: 8vw;
    width: 20vw;
    margin: .5vw;
    vertical-align: top;

    &.weenie
      cursor: pointer;

    &.completed
      background-color: primary-green;
      color: primary-blue;
      cursor: default;
      font-weight: 800;

    &.next
      width: 83vw;

.points
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  margin: 10px;
  font-size: 5vw;
  font-weight: 800;

.power-container
  height: 8vw;
  width: 83vw;

  .beat1, .beat2, .beat3, .beat4
    position: absolute;
    transition: all 150ms ease-in-out;

  .beat1
    left: 6%;

  .beat2
    left: 30%;

  .beat3
    left: 56%;

  .beat4
    left: 80%;

.options-panel
  text-align: center;
  user-select: none;
  opacity: 1;
  transition: all 500ms ease-in-out;

  &.disabled .setting
    opacity: 0.5;

    .active.option, .disabled.option
      border-width: 0;
      cursor: default;
      margin: 8px;

  .setting
    display: inline-block;
    margin: 30px;
    position: relative;
    transition: all 100ms;
    vertical-align: top;
    height: 90px;
    width: 100px;

    .options
      bottom: 0;
      overflow: hidden;
      position: absolute;

    .option
      cursor: pointer;
      height: 64px;
      width: 64px;
      padding: 10px;

      & /deep/ .container
        opacity: .7

      &:not(.active)
        border: outset #AAA;
        border-width: 0 4px 0 4px;
        margin: 0 4px;

      &:first-child
        border-top-width: 4px;
        border-top-left-radius: power-button-radius;
        border-top-right-radius: power-button-radius;

      &:last-child
        border-bottom-width: 4px;
        border-bottom-left-radius: power-button-radius;
        border-bottom-right-radius: power-button-radius;

      &.active
        border: outset 8px #AAA;
        border-radius: power-button-radius;

        &:hover
          border-color: lighten(#AAA, 20%);

        & /deep/ .container
          opacity: 1

      &:hover /deep/ .container
        opacity: 1 !important;

      &.dim /deep/ .container
        opacity: .3;

      &.disabled
        border: solid 8px #EEE;
        cursor: default;
        margin: 0;

        & /deep/ .container
          opacity: 1;

    &.strip, &.pulse
      .option
        background-color: primary-blue;
        border-color: spin(primary-blue, 4);
        font-size: 50px;
        line-height: 60px;

        &.active:hover
          border-color: lighten(spin(primary-blue, 4), 20%);

    &.auto
      .option
        background-color: white;

  .group
    display: inline-block;
    margin: 30px;

    .setting
      margin: 0;

.surface-container
  display: flex;
  flex-direction: column;
  justify-content: center;

bouncing-ball
  height: 20vh;
  margin: 0 auto;
  width: 80vw;
  max-width: 80vh;

.surface
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  margin: 2px 0;
  padding-top: 5px;
  position: relative;

.controls
  width: button-height;
  margin: 10px 15px;

  .goal.button
    &.active
      animation: count-goal-active;
      animation-duration: 150ms;

  .play.button
    display: block;
    position: relative;
    user-select: none;

    &.active
      animation: count-play-active;
      animation-duration: 250ms;

    &.disabled
      opacity: 0.2;

    &.fail:hover:not(:active):not(.disabled)
      filter: drop-shadow(red-button-shadow);

    .counter
      cursor: pointer;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      padding: 2px 5px;
      right: 0;
      font-size: 40px;
      line-height: 60px;
      font-weight: 800;
      text-align: left;

  .repeat
    display: inline-block;
    width: 60px;

    &:before, &:after
      content: '';
      border-radius: 50%;
      background-color: white;
      border: solid 6px primary-blue;
      display: block;
      margin: 8px;
      height: 30px;
      width: 30px;

    &.active:before, &.active:after
      animation: count-goal-active;
      animation-duration: 150ms;

  .button
    display: block;

  .spacer
    height: 5vh;

.button
  cursor: pointer;
  display: inline-block;
  height: button-height;
  text-align: center;
  margin-top: 0;
  margin-bottom: 0;
  user-select: none;
  vertical-align: top;
  width: button-height;

  &.disabled
    cursor: default;

  &:hover:not(:active):not(.disabled)
    margin-top: - button-shadow-size;
    margin-bottom: button-shadow-size;
    filter: drop-shadow(button-shadow);

.top-bar
  background-color: #DDD;
  left: 0;
  position: fixed;
  right: 0;
  top: 0;
  font-size: 48px;
  padding: 10px;
  text-align: center;

.bottom-bar
  background-color: #DDD;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: bottom-size;

.back
  cursor: pointer;

.weenie:not(:hover), .weenie.on-hover
  animation: weenie 1s infinite 500ms;

@keyframes count-goal-active
  0%, 100%
    transform: scale(1);
  20%
    transform: scale(1.05);
  80%
    transform: scale(0.95);

@keyframes count-play-active
  0%, 100%
    transform: translateX(0);
  10%
    transform: translateX(10px);
  70%
    transform: translateX(-5px);

@keyframes weenie
  0%, 100%
    transform: translateY(0)
    filter: drop-shadow(0);
    opacity: 1;
  50%
    transform: translateY(- button-shadow-size)
    filter: drop-shadow(weenie-shadow);
    opacity: 0.9;
