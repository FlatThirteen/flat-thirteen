bottom-size = 20vh;
button-height = 60px;
button-padding = 10px;
button-shadow-size = 4px;
button-shadow = 0 button-shadow-size 0 #000;
weenie-shadow = 0 button-shadow-size 3px #555;
primary-blue = #008FFF;
primary-green = #50FFA0;
primary-red = #FF6e56;

.fade
  filter: blur(5px);
  opacity: 0.2;

.main
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: bottom-size;
  overflow-y: scroll;

.lesson-container
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  transform: scale(1) translateY(0)
  transition-duration: 150ms;
  padding: 20px 0;

  &.fade
    transform: scale(.5) translateY(30vh)

  .current
    position: relative;
    text-align: center;

  .stage
    background-color: primary-blue;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 5vw;
    height: 8vw;
    width: 20vw;
    margin: .5vw;
    vertical-align: top;

    &.completed
      background-color: primary-green;
      color: primary-blue;
      cursor: default;
      font-weight: 800;

    &.next
      width: 83vw;

.points
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  margin: 10px;
  font-size: 5vw;
  font-weight: 800;

.options-panel
  text-align: center;
  user-select: none;

  .power
    background-color: #FFF;
    border: outset 5px #AAA;
    border-radius: 10%;
    cursor: pointer;
    display: inline-block;
    padding: 10px;
    margin: 30px;
    transition: border-color 100ms;

    &:hover
      border-color: #CCC;

    &:active
      border-style: inset;

      *
        position: relative;
        top: 2px;
        left: 2px;

.surface-container
  display: flex;
  flex-direction: column;
  justify-content: center;

bouncing-ball
  height: 20vh;
  margin: 0 auto;
  width: 80vw;
  max-width: 80vh;

.surface
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  margin: 2px 0;
  padding-top: 5px;
  position: relative;

.controls
  width: button-height;
  margin: 10px 15px;

  .goal.button
    &.active
      animation: count-goal-active;
      animation-duration: 250ms;

  .play
    display: block;
    position: relative;
    user-select: none;

    &.active
      animation: count-play-active;
      animation-duration: 250ms;

    .button.disabled
      opacity: 0.2;

  .counter
    cursor: pointer;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    padding: 2px 5px;
    right: 0;
    font-size: 40px;
    line-height: 60px;
    font-weight: 800;

  .button
    display: block;

  .spacer
    height: 5vh;

.button
  cursor: pointer;
  display: inline-block;
  height: button-height;
  text-align: center;
  margin-top: 0;
  margin-bottom: 0;
  user-select: none;
  vertical-align: top;
  width: button-height;

  &.disabled
    cursor: default;

  &:hover:not(:active):not(.disabled)
    margin-top: - button-shadow-size;
    margin-bottom: button-shadow-size;
    filter: drop-shadow(button-shadow);

.top-bar
  background-color: #DDD;
  left: 0;
  position: fixed;
  right: 0;
  top: 0;
  font-size: 48px;
  padding: 10px;
  text-align: center;

.bottom-bar
  background-color: #DDD;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: bottom-size;

.back
  cursor: pointer;

.weenie:not(:hover), .weenie.on-hover
  animation: weenie 1s infinite 500ms;

@keyframes count-goal-active
  0%, 100%
    transform: scale(1);
  20%
    transform: scale(1.1);
  80%
    transform: scale(0.9);

@keyframes count-play-active
  0%, 100%
    transform: translateX(0);
  10%
    transform: translateX(10px);
  70%
    transform: translateX(-5px);

@keyframes weenie
  0%, 100%
    transform: translateY(0)
    filter: drop-shadow(0);
    opacity: 1;
  50%
    transform: translateY(- button-shadow-size)
    filter: drop-shadow(weenie-shadow);
    opacity: 0.9;
